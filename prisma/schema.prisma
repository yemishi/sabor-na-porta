generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  phone     String
  name      String
  address   Address?
  isAdmin   Boolean?
  password  String?
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model product {
  id         String           @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  picture    String
  category   String
  variants   ProductVariant[]
  highLights Int[]
  updatedAt  DateTime         @updatedAt
  createdAt  DateTime         @default(now())
}

type Address {
  street      String
  houseNumber String
  city        String
  cep         String
  complement  String?
}

type ProductVariant {
  name      String
  stock     Int     @default(0)
  price     Float
  desc      String?
  promotion Float?
  addons    AddOn[]
}

type AddOn {
  name  String
  price Float
}
